generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model admins {
  id        String   @id @default(cuid())
  name      String
  username  String   @unique
  password  String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model customers {
  id        String   @id @default(cuid())
  username  String   @unique
  password  String
  name      String
  email     String   @unique
  phone     String
  address   String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  cart      cart[]
  orders    orders[]
}

model products {
  id          BigInt   @id @default(autoincrement())
  name        String
  img         String
  price       Float
  stock       Int
  isAvailable Boolean  @default(true)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  cart        cart[]
  orders      orders[]
}

model cart {
  customerId String
  productId  BigInt
  qty        Int
  product    products  @relation(fields: [productId], references: [id])
  customer   customers @relation(fields: [customerId], references: [id])

  @@id(name: "id", [customerId, productId])
}

model orders {
  id            BigInt       @id @default(autoincrement())
  customerId    String
  productId     BigInt
  transactionId BigInt
  qty           Int
  customer      customers    @relation(fields: [customerId], references: [id])
  product       products     @relation(fields: [productId], references: [id])
  transaction   transactions @relation(fields: [transactionId], references: [id])
}

model transactions {
  id              BigInt   @id @default(autoincrement())
  customerId      String
  amount          Float
  channel         String
  status          String
  midtransOrderId String
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
  orders          orders[]
}
